#ifndef REGISTER_APP_H
#define REGISTER_APP_H
#include <QtGui>

class RegisterApp : public QDialog
{
    Q_OBJECT
public:
    explicit RegisterApp(QWidget* parent = 0, Qt::WindowFlags f = 0);
    virtual ~RegisterApp();
    QString accountName();
    QString userName();
    QString telephone();
    QString address();
    QString password();
    QString verifiedPassword();
protected slots:
    virtual void accept();
protected:
    QLabel* m_accountNameLabel,m_userNameLabel,m_telephoneLabel,m_addressLabel,m_passwordLabel,m_verifiedPasswordLabel;
    QLineEdit m_accountNameInput,m_userNameInput,m_telephoneInput,m_addressInput,m_passwordInput,m_verifiedPasswordInput;
    QDialogButtonBox* m_buttonBox;
private:
    QString m_accountName,m_userName,m_telephone,m_address,m_password,m_verifiedPassword;
public slots:
    void SLOT();
};

#endif